{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ],
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "**/node_modules/*",
    "**/dist/*",
    "**/public/*",
    "**.d.ts"
  ],
  "rules": {
    "@typescript-eslint/no-misused-promises": "off"
  }
}
